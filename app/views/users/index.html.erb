<% provide(:title,"Users") %>
<p id="notice"><%= notice %></p>

<h1>Users</h1>
<h1>
<%= link_to 'Sign Up', signup_path,class:"btn btn-primary btn-lg" %>
</h1>
<table width="70%" class="table-striped table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.id %></td>
        <td><%= link_to 'Show', user, class:"btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-info btn-xs" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



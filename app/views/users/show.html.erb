<p id="notice"><%= notice %></p>
<% provide(:title, @user.name) %>


<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-sm-8">
    <h3>MicroPosts by <%= @user.name%></h3>

    <% @user.microposts.each do |post| %>

        <%= post.content %> <br>
    <% end %>


    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Back', users_path %>

  </div>
</div>





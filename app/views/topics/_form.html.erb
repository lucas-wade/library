        </div>
    <% end %>

      <!-- #parent topic stuff -->
    <% if @parent_topic %>
        <h3>Create translation or subcategory of <strong><%= @parent_topic.name %></strong></h3>

        <%= hidden_field_tag :parent_id, @parent_topic.id %>

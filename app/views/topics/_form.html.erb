        <%= f.label :category %><br>
        <%# f.select(:category, [['Main',0],['Category 1',1],['Category 2',2]] ) %>
        <% count =0 %>
        <% hash = [] %>
        <% while count < $available_categories.count do %>
            <% hash << [$available_categories[count], count] %>

            <% count+=1 %>

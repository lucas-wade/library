      <%= f.select(:language_id, [['English','1'],['Hindi','2'],['Arabic','3'],['Spanish','4'],['Portuguese','5'],['Bengali','6']] ) %>
    </div>

      <div class="field">
        <%= f.label :is_it_a_translation %>
        <%= f.check_box :translation %>
      </div>


    <div class="field">
        <%= f.label :main_content %><br>
        <%= f.text_area :main_content, :size => "2x10" %>
    </div>

    <div class="field">
      <%= f.label :skill_level %><br>
      <%= f.select(:skill, [['Basic',1],['Intermediate',2],['Advanced',3]] ) %>
    </div>

    <div class="field">
      <%= f.label :category %><br>
      <%= f.select(:category, [['Main Topic',0],['Category 1',1],['Category 2',2],['Category 3',3],['Peak',4]] ) %>

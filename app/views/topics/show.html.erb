<% if edit_mode == 1 %>
    <% if session[:edit_lang].present? && session[:edit_lang] != 'en' %>
        <% new_topic = @topic.translations.find_by_language(session[:edit_lang]) %>

        <script type="text/javascript">
            window.location.href="<%= edit_topic_path(new_topic) %>"
        </script>
        <% else %>
    <script type="text/javascript">
        window.location.href="<%= edit_topic_path %>"
    </script>
        <% end %>
    <% else %>

<div class="row low-gutter tight-butt">
  <% #if @topic.parents.present? && @topic.parents.first.id < 4
     #  @temp_topic = @topic.parents.first.id - 1
     #  session[:current_collumn]= @temp_topic
     #else
     #  @temp_topic = session[:current_collumn]
     #end

     @temp_topic = @topic.col_finder - 1
     session[:current_collumn] = @temp_topic

  %>

  <div id="big_c">
    <% if @temp_topic == 0 %>
        <div class="col-sm-4">
          <%= render 'column' %>
        </div>
    <% end %>
  </div>

  <!-- sub topic nav bar -->
  <div id="sub-topics-window" class="col-md-8 ">
    <h3>
      <%# @topic.parents.first.id %>

      <% if @topic.kids.present? %>
          <% @topic.kids.each do |tt|
            if tt.category < 1 && tt.language == I18n.locale.to_s %>
                  <% if tt.icon.present? %>
                      <%= image_tag tt.icon.url, class: "img-icon" %>
                  <% else %>
                      <%= link_to tt.name, tt, class: "btn btn-default" unless tt.name == nil %>
                  <% end %>
              <% end %>
          <% end %>
      <% end %>

           <% if shot_topic_first_parent_or_self.id > 3  && @topic.category == 0 %>
              <% @topic.parents.first.kids.each do |tt|
                if tt.category < 1 && tt.language == I18n.locale.to_s %>
                      <% if tt.icon.present? %>
                          <%= image_tag tt.icon.url, class: "img-icon" %>
                      <% else %>
                          <%= link_to tt.name, tt, class: "btn btn-default" %>
                      <% end %>
                  <% end %>
              <% end %>
          <% end %>


      <% if @topic.category > 0 %>
          <% @topic.parents.first.parents.first.kids.each do |tt|
            if tt.category < 1 && tt.language == I18n.locale.to_s %>
                  <% if tt.icon.present? %>
                      <%= image_tag tt.icon.url, class: "img-icon" %>
                  <% else %>
                      <%= link_to tt.name, tt, class: "btn btn-default" %>
                  <% end %>
              <% end %>
          <% end %>
      <% end %>
    </h3>
  </div>


  <div class="col-sm-8 ">
    <%= render 'content_window' %>
  </div>

  <div id="big_c">
    <% if @temp_topic == 1 || @temp_topic == 2 %>
        <div class="col-sm-4">
          <%= render 'column' %>
        </div>
    <% end %>
  </div>

  <% tt=@temp_topic %>

  <div id="small_c1">
    <div class="col-sm-4">
      <% @temp_topic =0 %>
      <%= render 'column' %>
    </div>
  </div>
  <div id="small_c3">
    <div class="col-sm-4">
      <% @temp_topic =1 %>
      <%= render 'column' %>
    </div>
  </div>
  <div id="small_c3">
    <div class="col-sm-4">
      <% @temp_topic =2 %>
      <%= render 'column' %>
    </div>
  </div>


</div>

</div>

<% end %>
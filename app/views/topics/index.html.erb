<% provide(:title, 'Classroom') %>

<div class="row">
  <div class="col-lg-3">
    <h5> <i class="fa fa-book fa-2x"></i> </h5>
    <% @temp_topic=0 %>
    <%= render 'column' %>
  </div>

  <div class="col-lg-1">
  </div>

  <div class="col-lg-3">
    <h5> <i class="fa fa-child fa-2x"></i> </h5>
    <% @temp_topic=1 %>
    <%= render 'column' %>
  </div>

  <div class="col-lg-1">
  </div>

  <div class="col-lg-3">
    <h5> <i class="fa fa-users fa-2x"></i> </h5>
    <% @temp_topic=2 %>
    <%= render 'column' %>
  </div>

</div>





<% if current_user.admin %>
    <hr><h2>Admin Area</h2>
<div class="main-menu">
    <%= link_to 'New Topic', new_topic_path, class:"btn btn-primary"%>

  <br><br><br><br><br><br>
  <br><br><br><br><br><br>
    <% @topics.each do |t| %>
      <%= link_to t.name, t %>
        <% if t.parents.count < 1 %>
          <strong>no parents</strong>
        <% else %>
          <strong>Parents:</strong> <% t.parents.each do |tt| %> - <%= link_to tt.name, tt %> <% end %>
        <% end %>
      <br>
    <% end %>


</div>

<% end %>
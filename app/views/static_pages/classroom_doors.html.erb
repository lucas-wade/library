<%# if logged_in? %>

<div class="classroom-doors ">

  <% the_class = "col-sm-10 col-sm-offset-1 " + rtl_checker(I18n.locale).to_s + " classroom-doors-bottom" %>
     <div class="<%= the_class %>" id="classroom-doors-text-bg">
      <!-- <div class="classroom-doors-text-bg"> -->
       <p><%= t('classroom_doors.pI_html') %></p>

       <%
          temp = t('classroom_doors.knowledge_pI') + '<br><br>' + t('classroom_doors.knowledge_pII')
       %>
       <p class="center">
         <%= render 'shared/modal', button: t('classroom_doors.knowledge') , title: t('classroom_doors.knowledge'), body: temp, the_class: "btn btn-lg fat-text-button",count:1 %>

         </p>

       <p><%= t('classroom_doors.pII') %>
       <%= t('classroom_doors.knowledge_pIII') %>
         <%= t('classroom_doors.knowledge_pIV') %></p>
       <p class="center">

         <%= render 'shared/modal', button: t('classroom_doors.nature_note_button') , title: t('classroom_doors.nature_note_button'), body: t('classroom_doors.nature_note_html'), the_class: "btn btn-lg fat-text-button",count: 2 %>

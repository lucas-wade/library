<% provide(:title, "Translation Manager") %>
<div class="row b0">
  <div class="col-xs-3">
    <!-- search -->
    <%= form_tag(translations_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Topics" %>
        <%= submit_tag "Search", :name => nil %>
    <% end %>
  </div>
  <div class="col-xs-9">
    <% if @topics.present? %>
        <% @topics.each do |t| %>
            <%= link_to t.name, t %>
            <strong><small>Translations =></small></strong>
            <% if t.translations.present? %>
                <% t.translations.each do |tt| %>
                    <%= link_to tt.language, tt %>
                    <% end %>
                <% end %>

            <br>
        <% end %>
    <% end %>



  </div>
</div>

<% provide(:title, t('sessions.log_in') ) %>



<div id="login" class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="filled-container-padded ">
    <h1><%= t('sessions.log_in') %></h1>
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label( t('sessions.email') ) %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label(t('sessions.password')) %>
        <%= link_to t('sessions.forgot_password') , new_password_reset_path %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label( t('sessions.remember_me'), class: "checkbox inline" ) do %>
            <%= f.check_box :remember_me %>
            <span><%= t('sessions.remember_me') %></span>
        <% end %>

        <%= f.submit t('sessions.log_in'), class: "btn btn-primary" %>
    <% end %>

    <p><%= t('sessions.new_user') %> <%= link_to t('sessions.register'), signup_path %></p>
    </div>
  </div>
</div>



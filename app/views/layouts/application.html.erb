<!DOCTYPE html>
<html>

<head>
  <title><%=full_title(yield(:title)) %></title>
  <%= render 'layouts/scripts' %>
</head>


<body ontouchstart="">

<%= render 'layouts/header' %>

<div class="container-fluid <%= "main-container" if fullscreen_mode? %>">
  <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>


  <div class="jimbo">
    <%= yield %>
  </div>

  <%# render 'layouts/footer' %>

  <%# debug(params) if Rails.env.development? %>

  <% if current_admin == TRUE && edit_mode == 1 %>
      <%# render 'admin/console' %>
  <% end %>


</div> <!-- /container -->

<%= render 'layouts/green_strip' %>

<%= render 'layouts/footer' %>
</body>

</html>

<!-- Button trigger modal -->
<a href="" type="button" class="<%= raw the_class %>" data-toggle="modal" data-target="#myModal-<%= count %>">
  <%= raw button %>
</a>

<!-- Modal -->
<div class="modal fade" id="myModal-<%= count %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal_dialog_topic">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= title %></h4>
      </div>
      <div class="modal-body">

        <% if body %> <!-- media present -->
          <%# sanitize body %>

           <!-- <iframe width="100%" height="1024" frameborder="0" src="<%= body %>"> </iframe> -->
          <% else if url %>
              <% if type == 7 %> <!-- photo -->
                <%= image_tag url %>
              <% else if type == 6 %> <!-- animation -->
                <div style="text-align:center"><video width="92%" height="90%" controls="true" src="<%= url %>" ></video></div>
              <% else if type == 5 %> <!-- movie -->
                <div style="text-align:center"><video width="92%" height="90%" controls="true" src="<%= url %>" ></video></div>
              <% else if type == 8 %> <!-- remote video -->
              <div style="height:70vh;">
                <iframe autoplay=false width="100%" height="92%" frameborder="0" allowfullscreen src="<%= url %>"> </iframe>
              </div>
              <% else %>
                <div style="height:70vh;">
                <iframe autoplay=false width="100%" height="92%" frameborder="0" allowfullscreen src="<%= url %>"> </iframe>
              </div>
                  <% end %>
                  <% end %>
                <% end %>
              <% end %>

          <% end %>
        <% end %>

      </div>
      <div class="modal-footer">
        <button id='stop-vid' type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i></button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>

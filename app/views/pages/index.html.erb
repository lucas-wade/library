<div class="offset-jimbo" style="padding:1em;background-color:rgba(255,255,255,.633)">
  <%= link_to 'New Page', new_page_path, class: 'btn btn-success' %>
<h1>Listing Pages</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>link url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= page_url(page).to_s %></td>
        <td><%= link_to 'Show', page, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_page_path(page), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>

<% provide(:title, 'Publication Viewer') %>

    <h1><%= @pub.name %></h1>
    <h2><%= @pub.language %></h2>

<div id="pub-<%= @pub.id %>">

  <span class="content">
    <%= @pub.media.content_type %>
    <% if @pub.media? %>
        <% if @pub.media.content_type == "application/pdf" %>
            <div class="pdf-viewer">
              <iframe src="<%= @pub.media.url %>" width="100%" height="100%"></iframe>
            </div>
        <% else %>
            <%= image_tag @pub.media.url %>
        <% end %>
    <% end %>
  </span>

  <span class="timestamp">
    Posted <%= time_ago_in_words(@pub.created_at) %> ago.
  </span>

  <% if current_user.admin?%>
      <% if $edit_mode==1 %>
      <%= link_to "delete", @pub, method: :delete,
                  data: { confirm: "You sure?" } %>
          <% end %>
      <% end %>



